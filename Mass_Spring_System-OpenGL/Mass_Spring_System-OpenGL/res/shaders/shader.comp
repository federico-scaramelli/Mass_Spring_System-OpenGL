#version 460

layout ( local_size_x = 2 ) in;

layout ( std430, binding = 0 ) buffer Pos {
	vec3 position[];
};

void main() 
{
	uint idx = uint(mod(gl_LocalInvocationID.x, 2));

	position[idx].x += gl_LocalInvocationID.x;
	position[idx].y += gl_LocalInvocationID.x;
	position[idx].z += gl_LocalInvocationID.x;
}